datasource db {
  provider = "sqlite"
  url      = "file:./base.db"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  role     String
  password String
  docs     Doc[]
}
model Doc {
  id            Int    @id @default(autoincrement())
  name          String @unique
  extension     String
  publisher     User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId        Int
}